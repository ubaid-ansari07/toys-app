<!DOCTYPE html>
<html lang="en">

<head>

   <%- include('../_links.ejs')%>
    <title>Category List</title>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
       <%- include('../_header.ejs')%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Begin Page Content -->
                <div class="container d-flex justify-content-center align-items-center" style="height: 50vh;">
                    <form action="/admin/category/edit" method="post">
                      <div class="form-group d-flex">
                        <input type="hidden" name="_id" id="" value="<%= category[0]._id%>">
                        <input
                          type="text"
                          class="form-control"
                          name="categoryName"
                          value="<%= category[0].categoryName%>"
                        />
                        <button class="btn btn-outline-dark" type="submit">edit</button>
                      </div>
                    </form>
                  </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
 
    <%- include('../_scripts.ejs')%>
</body>

</html>