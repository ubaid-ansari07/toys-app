<!DOCTYPE html>
<html lang="en">

<head>

   <%- include('../_links.ejs')%>
    <title>Category List</title>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
       <%- include('../_header.ejs')%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Begin Page Content -->
                <div class="container" style="width: 75%; margin-top: 50px;">
                  <form action="/admin/product/edit" method="post">
                    <div class="form-group my-3">
                      <input type="hidden" name="_id" id="" value="<%= product[0]._id%>">
                      <label for="">Category</label>
                      <select name="categoryName" id="" class="form-control">
                        <option value="<%= product[0].categoryName%>"><%= product[0].categoryName%></option>
                        <%
                          category.forEach(obj=>{
                            %>
                            <option value="<%= obj.categoryName%>"><%= obj.categoryName%></option>
                            <%
                          })
                        %>
                      </select>
                      <label for="">Product Name</label>
                      <input type="text" name="productName" id="" class="form-control" value="<%= product[0].productName%>">
                      <label for="">Price</label>
                      <input type="number" name="productPrice" id="" class="form-control" value="<%= product[0].productPrice%>">
                      <label for="">Quantity</label>
                      <input type="number" name="productQty" id="" class="form-control" value="<%= product[0].productQty%>">
                      <label for="">Description</label>
                      <textarea name="productDescription" id="" cols="30" rows="5" class="form-control" value="<%= product[0].productDescription%>"><%= product[0].productDescription%></textarea>
             
                      <button type="submit" class="btn btn-outline-secondary">Edit Product</button>
                    </div>
                  </form>
                  </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
 
    <%- include('../_scripts.ejs')%>
</body>

</html>