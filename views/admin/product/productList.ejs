<!DOCTYPE html>
<html lang="en">

<head>

   <%- include('../_links.ejs')%>
    <title>Category List</title>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
       <%- include('../_header.ejs')%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <%if(success.length>0){
                    %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>success! </strong> <%= success%>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    <%
                  }%>
                  <%if(failure.length>0){
                    %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error! </strong> <%= failure%>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                    <%
                  }%>
                <!-- Begin Page Content -->
                <div class="container">
                    <table class="table">
                        <thead>
                            <th>S. NO.</th>
                            <th>Product Image</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Category</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </thead>
                        <tbody>
                            <%product.forEach((obj,index)=>{
                                %>
                                <tr>
                                    <td><%= index+1%></td>
                                    <td><img src="/productImages/<%= obj.productImage%>" alt="" width="100" height="100"></td>
                                    <td><%= obj.productName%></td>
                                    <td><%= obj.productPrice%></td>
                                    <td><%= obj.productQty%></td>
                                    <td><%= obj.categoryName%></td>
                                    <td><a href="/admin/product/edit/<%= obj._id%>"><i class='fa fa-edit'></i>
                                    </a></td>
                                    <td><a onclick="return confirm('are you sure ?')" href="/admin/product/delete/<%= obj._id%>"><i class='fa fa-trash'></i>
                                    </a></td>
                                </tr>
                                <%
                            })%>
                        </tbody>
                    </table>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
 
    <%- include('../_scripts.ejs')%>
</body>

</html>